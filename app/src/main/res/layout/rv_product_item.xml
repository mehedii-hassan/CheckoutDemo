<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:contentPadding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProductItem"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/image" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPedigree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Pedigree Adult Dry Dog\nFood, Chicken Flavor"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSR"
        app:layout_constraintStart_toEndOf="@+id/cvTop"
        app:layout_constraintTop_toTopOf="@+id/cvTop" />

    <TextView
        android:id="@+id/tvSR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="SR 40"
        android:textColor="#040D1B"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cvTop"
        app:layout_constraintStart_toStartOf="@+id/tvPedigree"
        app:layout_constraintTop_toBottomOf="@+id/tvPedigree" />


    <ImageView
        android:id="@+id/ivCloseSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPedigree" />


</androidx.constraintlayout.widget.ConstraintLayout>